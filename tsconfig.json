{
  "compilerOptions": {
    "baseUrl": "",
    "paths": { "*": ["types/*", "./src/*"] },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "jsx": "react",
    "allowJs": true,
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
