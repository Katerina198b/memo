@import "../../constants/background.styl"

.color {
  min-width: 35px;
  min-height: 35px;
  border-radius: 10px;
  border: 5px solid #e8e8e8;
  position: relative;
  fill: #fff;

  {background}

  &_checked:before {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    content: '';
  }

  &__icon {
    display: none;
  }

  &_checked &__icon {
    display: block;
  }

  &_checked {
    transform: scale(1.1);
  }
}
