.menu {
  display: flex;
  margin: 20px 0 0 0;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  box-shadow: 0 0 22px -17px rgba(0,0,0,0.75);
  align-items: center;
  padding: 0 20px;
  background: white;
  height: 50px;
  z-index: 1000;

  &__item {
    width: 25px;
    height: 25px;
    background-repeat: no-repeat;
    background-size: cover;
    fill: #89909a;

    &_active {
      fill: #4a80f0;
    }
  }

}
