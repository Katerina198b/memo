$green = #71b95d;

.checkbox {
  cursor: pointer;
  height: 45px;

  &__input {
    position: relative;
    margin: 0 1rem 0 0;
    cursor: pointer;
    box-shadow: none;
    border: none;
    -webkit-appearance: none;
    outline-offset: none;
    outline: none;

    &:before {
      transition: all .3s ease-in-out;
      content: "";
      position: absolute;
      left: 0;
      z-index: 1;
      width: 1rem;
      height: 1rem;
      border: 2px solid #d4d1cc;
    }


    &:checked {
      &:before {
        transform: rotate(-45deg);
        height: .5rem;
        border-color: $green;
        border-top-style: none;
        border-right-style: none;
      }
    }


    &:after {
      content: "";
      position: absolute;
      left: 0;
      width: 1.1rem;
      height: 1.1rem;
      background: #fff;
      cursor: pointer;
    }
  }
}
