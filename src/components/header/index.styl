.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 20px;

  &_with-logo {
    position: relative;
    background: url('header.svg');
    padding: 0 30px;
    display: flex;
    height: 185px;
    margin: 0;
    background-size: 100%;
    background-position-y: 100%;
    background-color: #b0daff;
    background-repeat: no-repeat;
    align-items: center;
  }

  &__hello {
    font-size: 1.6rem;
  }

  &__username {
    font-size: 1.2rem;
    font-weight: 400;
  }

  &__logo {
    justify-content: start;
    margin: 0;
    position: absolute;
    width: 100%;
    top: -280px;
  }

  &__after {
    position: absolute;
    left: 0;
    right: 0;
    content: '';
    bottom: -50px;
    height: 100px;
    border-top-left-radius: 60px;
    border-top-right-radius: 60px;
    background: white;
  }

  &__title {
    font-size: 2rem;
    top: 30px;
  }

  &__level {
    font-size: .8rem;
    opacity: .5;
    margin-top: 5px;
  }
}
