* {
  margin: 0;
  padding: 0;
}

@font-face {
  font-family: circular;
  src: url('../fonts/YandexSansText-Light.ttf') format('truetype');
  font-weight: 300;
}

@font-face {
  font-family: mono;
  src: url('../fonts/digital-7.ttf') format('truetype');
  font-weight: 300;
}

@font-face {
  font-family: circular;
  src: url('../fonts/YandexSansText-Regular.ttf') format('truetype');
  font-weight: 400;
}

body {
  font: 12px circular, sans-serif;
  font-weight: 300px;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 300px;
}

h1 {
  font-size: 1.4rem;
}
